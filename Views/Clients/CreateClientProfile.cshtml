@model Core_Health_and_Fitness.Models.ClientProfile

@{
    ViewData["Title"] = "CreateClientProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateClientProfile</h1>

<h4>ClientProfile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateClientProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalProvider" class="control-label"></label>
                <input asp-for="MedicalProvider" class="form-control" />
                <span asp-validation-for="MedicalProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalHistory" class="control-label"></label>
                <textarea class="form-control" name="mytext" rows="4" cols="20" placeholder="Medical History"></textarea>
                <span asp-validation-for="MedicalHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FitnessGoal" class="control-label"></label>
                <input asp-for="FitnessGoal" class="form-control" />
                <span asp-validation-for="FitnessGoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityUserId" class="control-label"></label>
                <select asp-for="IdentityUserId" class ="form-control" asp-items="ViewBag.IdentityUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

