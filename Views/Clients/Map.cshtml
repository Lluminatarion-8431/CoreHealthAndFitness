@model Core_Health_and_Fitness.Models.PersonalTrainer

@{ ViewData["Title"] = "Map";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1 class="text-primary">Map View</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
    </dl>
</div>
<br />
<div>
    <form asp-action="Index">
        <button type="submit" class="btn btn-outline-info">Index</button>
    </form>
    <br />
    <form asp-action="PersonalTrainers" method="get">
        <button type="submit" class="btn btn-outline-info">Back to All Trainers</button>
    </form>
    <br />
</div>
<br />
<div id="map" style="width:100%; height:400px"></div>

@section scripts{

    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcbQClo7NS9uH8VIQ7lMwc_FuUX2nVagg&callback=initMap&libraries=&v=weekly"
            defer></script>
    <script type="text/javascript">
    let map;
    var long = @Html.DisplayFor(model => model.Long);
    var lat = @Html.DisplayFor(model => model.Lat);


    function initMap() {
        var mapOptions = {
            zoom: 15,
            center: new google.maps.LatLng(lat, long),
            mapTypeId: 'roadmap'
        };
        var map = new google.maps.Map(document.getElementById('map'), mapOptions);

        var trainerHomePosition = { lat: latitude, long: longitude };
        var marker = new google.maps.Marker({
            position: trainerHomePosition,
            map: map,
            title: 'Trainer location'
        });

    }
    </script>
}

